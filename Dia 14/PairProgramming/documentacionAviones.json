{
  "openapi": "3.0.0",
  "info": {
    "description": "API de control de aviones",
    "version": "1.0.0",
    "title": "API aviones"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "tags": [
    {
      "name": "aviones",
      "description": "Este endpoint se encarga de gestionar todo lo relacionado a la información de los aviones."
    }
  ],
  "paths": {
    "/aviones": {
      "get": {
        "tags": [
          "todosAviones"
        ],
        "summary": "findAll",
        "description": "Este metodo se encarga de devovler todos los aviones.",
        "responses": {
          "200": {
            "description": "(OK) Operación correcta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aviones"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "tags": [
          "crearAvion"
        ],
        "summary": "Crea un nuevo avion",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/aviones"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "(OK) Operación correcta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aviones"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "put": {
        "tags": [
          "actualizarAvion"
        ],
        "summary": "Modificar un avion existente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/aviones"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "(OK) Operación correcta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aviones"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/aviones/{matricula}": {
      "get": {
        "description": "Obtener un avion por ID",
        "parameters": [
          {
            "in": "path",
            "name": "matricula",
            "required": true,
            "description": "matricula",
            "schema": {
              "type": "string",
              "example": "AMC-445"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "(OK) Operación correcta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aviones"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "description": "Eliminar un avion por ID",
        "parameters": [
          {
            "in": "path",
            "name": "matricula",
            "required": true,
            "description": "matricula",
            "schema": {
              "type": "string",
              "example": "AMC-445"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "(OK) Operación correcta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/aviones"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "Unauthorized": {
        "description": "(Unauthorized) no tiene autorizacion para llamar el servicio"
      },
      "NotFound": {
        "description": "(NotFound) no se encontro la informacion"
      },
      "BadRequest": {
        "description": "(BadRequest) los datos enviados son incorrectos o hay datos obligatorios no enviados"
      },
      "ServerError": {
        "description": "(ServerError) error en el servidor"
      }
    },
    "schemas": {
      "aviones": {
        "type": "object",
        "properties": {
          "matricula": {
            "type": "string",
            "description": "matricula del avion"
          },
          "tamanio": {
            "type": "string",
            "description": "tamanio del avion"
          },
          "cantPasajeros": {
            "type": "integer",
            "description": "cantidad de pasajaeros"
          },
          "velocidad": {
            "type": "integer",
            "description": "velocidad maxima"
          }
        }
      }
    }
  }
}